{% extends 'layout.html.twig' %}
{% block hyperlien%}{% endblock %}
{% block contenu %}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
<div class="row">
    {{ form_start(form) }}
    <h2> Cr√©er une Sortie</h2>
        <div class="col-sm-2 col-sm-offset-1">
            {{ form_label(form.nomSortie) }}
            {{ form_label(form.dateDebutSortie) }}
            {{ form_label(form.dureeSortie) }}
            {{ form_label(form.dateCloture) }}
            {{ form_label(form.nbInscriptionMax) }}
            {{ form_label(form.infoSortie) }}
        </div>

        <div class="col-sm-3">
            {{ form_widget(form.nomSortie) }}
            {{ form_widget(form.dateDebutSortie) }}
            {{ form_widget(form.dureeSortie) }}
            {{ form_widget(form.dateCloture) }}
            {{ form_widget(form.nbInscriptionMax) }}
            {{ form_widget(form.infoSortie) }}
        </div>

        <div class="col-sm-2 col-sm-1">
            {{ form_label(form.lieu) }}
            <br><br>
            {{ form_label(form.site) }}


        </div>

        <div class="col-sm-3">
            {{ form_widget(form.lieu) }}
            {{ form_widget(form.site) }}

