{% extends 'layout.html.twig' %}
{% block hyperlien %}{% endblock %}
{% block contenu %}
    <div class="row">
        <div class="col-sm-3 col-sm-offset-5">
            {% form_theme form 'bootstrap_4_layout.html.twig' %}

            {% for message in app.flashes('info') %}
                <div class="alert alert-info">
                    {{ message }}
                </div>
            {% endfor %}

            <h1>Annuler la sortie</h1>
        </div>
        <div class="row">
            <div class="col-sm-3 col-sm-offset-5">
                nom de la sortie : {{ sortie.nomSortie }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-sm-offset-5">
                Date de la sortie : {{ sortie.dateDebutSortie|date('Y-m-d') }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-sm-offset-5">
                Ville organisatrice : {{ sortie.site }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-5 col-sm-offset-5">
                Lieu
                : {{ sortie.lieu }}{{ sortie.lieu.rue }}{{ sortie.lieu.ville.codePostalVille }}{{ sortie.lieu.ville }}
            </div>
        </div>
    </div>
    </div>
    <div class="row">
        <div class="col-sm-3 col-sm-offset-5">
            <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#myModal">Annuler la
                sortie
            </button>
            <a href="{{ path('homepage') }}" class="btn btn-info">Annuler</a>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Etes-vous sur de vouloir annuler la sortie ?</h4>
                    </div>
                    <div class="modal-body">
                        <p>{{ form(form) }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}