{% extends 'layout.html.twig' %}

{% block contenu %}
    {% if error %}
        <div class="alert-danger" style="margin-top: 20px">
            {{ error.messageKey|trans(error.messageData('security')) }}
        </div>
    {% endif %}
    {# Message erreur et success #}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" style="margin-top: 20px">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success" style="margin-top: 20px" >
            {{ message }}
        </div>
    {% endfor %}

    <div class="col-sm-6 col-sm-offset-3">
        <form action="" method="post">

            <div class="form-group">
                <label for="">Pseudo</label>
                <input type="text" class="form-control" id="_username" name="_username" value="{{ lastUsername }}">
            </div>
            <div class="form-group">
                <label for="">Mot de passe</label>
                <input type="password" class="form-control" id="_password" name="_password">
            </div>
            <div>
                <label>
                    <input type="checkbox" name="_remember_me" checked>
                    Se souvenir de moi
                </label>
            </div>
            <button type="submit">Se connecter</button>
            <br><br><br>
            <a href="{{ path('participant_inscription') }}"> Cr√©er un compte</a>
        </form>
    </div>
{% endblock %}


